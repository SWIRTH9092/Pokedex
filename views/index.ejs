<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head.ejs", {title: "Pokedex"}) %>
<body>
    <%- include("./partials/header.ejs", {title: "Pokedex"}) %>       
    <div id="grid-row-2">
            <a href="/Pokedex/new" >
                <button type="button" id="button-grid-2">Add a New Pokemon</button>
            </a>
    </div>
    <div id="grid-row-3">
        <% allpokemon.forEach((v, index) =>{ %>           
        <div id="card">
            <a  href="/Pokedex/<%=index%>">
                    <img src="<%=v.img%>" class="poke-image" alt="<%=v.name%>">
            </a>
            <div class="info-container">   
                <h4><b><%=v.name%></b></h4>
                <div class="buttons">
                    <a href="/Pokedex/<%=index%>"><button type="button" id="button">View</button>
                    </a>
                    <a href="/Pokedex/<%=index%>/edit"><button type="button" id="button">Edit</button>
                    </a>
                </div>
            </div>
        </div>
            
        <% }) %> 
     </div>
</body>
</html>