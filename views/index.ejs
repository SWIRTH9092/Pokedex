<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("./partials/head.ejs", {title: "Pokedex"}) %>
    </head>
<body>
    <h1 id="pagetitle">Pokedex</h1>
    <div class="newbutdiv">
            <a href="/Pokedex/new" >
                <button type="button" id="newbut">Add a New Pokemon</button>
            </a>
    </div>
    <div class="papa-container">
        <% allpokemon.forEach((v, index) =>{ %>           
        <div id="card">
            <a  href="/Pokedex/<%=index%>">
                    <img src="<%=v.img%>" class="poke-image" alt="<%=v.name%>">
            </a>
            <div class="info-container">   
                <h4><b><%=v.name%></b></h4>
                <div class="buttons">
                    <a href="/Pokedex/<%=index%>"><button type="button" id="button">Show</button>
                    </a>
                    <form action="/Pokedex/<%= index %>?_method=DELETE" method="POST" >
                        <input id="button" type="submit" value="Delete">
                    </a>
                </div>
            </div>
        </div>
            
        <% }) %> 
     </div>
</body>
</html>